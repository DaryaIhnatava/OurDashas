@model Jewelry.Business.Data.Jewelry

@{
    ViewData["Title"] = "Insert";
}

<h2>Insert</h2>

<h4>Jewelry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Insert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shape" class="control-label"></label>
                <input asp-for="Shape" class="form-control" />
                <span asp-validation-for="Shape" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Metal" class="control-label"></label>
                <input asp-for="Metal" class="form-control" />
                <span asp-validation-for="Metal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price.Value" class="form-control" />
                <span asp-validation-for="Price.Value" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Price.Currency" class="control-label"></label>
                <select asp-for="Price.Currency"  class="form-control">
                    <option value="0">Dollar</option>
                    <option  value="1">Ruble</option>
                    <option  value="2">Euro</option>
                </select>
                <span asp-validation-for="Price.Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

